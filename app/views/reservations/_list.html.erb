<table>
  <thead>
    <tr>
      <th>Create Date</th>
      <th>Checkin Date</th>
      <th>Checkout Date</th>
      <th>Client names</th>
      <th>Client email</th>
      <th>Client phone</th>
      <th>Details</th>
      <th>Clients count</th>
      <th>Breakfast</th>
      <% if @history %>
        <th>Status</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.create_date %></td>
        <td><%= reservation.checkin %></td>
        <td><%= reservation.checkout %></td>
        <td><%= reservation.client_names %></td>
        <td><%= reservation.client_email %></td>
        <td><%= reservation.client_phone %></td>
        <td><%= reservation.details %></td>
        <td><%= reservation.clients_count %></td>
        <td><%= reservation.breakfast %></td>
        <% if @history %>
          <td><%= reservation.status.capitalize %></td>
        <% end %>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
